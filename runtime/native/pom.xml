	<name>berkelium-runtime-native: native code parent project</name>
	<artifactId>berkelium-runtime-native</artifactId>
	<packaging>pom</packaging>
	
	<modules>
		<module>berkelium-binary-release</module>
	</modules>
	
	<profiles>
		<profile>
			<id>berkelium-runtime-native-win32</id>
		
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<modules>
				<module>win32</module>
				<!-- lib must come after win32
				<module>lib</module>
				 -->
			</modules>
			<properties>
				<platform>win32</platform>
				<download_date>2010-10-31</download_date>
				<!-- 
				<native.lib.src>berkelium-runtime-native-win32.dll</native.lib.src>
				<native.lib.dest>berkelium-java.dll</native.lib.dest>
				 -->
			</properties>
		</profile>
		<profile>
			<id>berkelium-runtime-native-linux64</id>
			<activation>
				<os>
					<family>linux</family>
				</os>
			</activation>
			<modules>
				<module>linux64</module>
				<!-- lib must come after linux64
				<module>lib</module>
				-->
			</modules>
			<properties>
				<platform>linux64</platform>
				<download_date>2010-11-02</download_date>
				<!-- 
				<native.lib.src>berkelium-runtime-native-linux64.so</native.lib.src>
				<native.lib.dest>libberkelium-java.so</native.lib.dest>
				 -->
			</properties>
		</profile>
	</profiles>
	<properties>
		<target>${basedir}/../../target</target>
		<target.bin>${basedir}/../../target/classes/org/berkelium/native/${platform}</target.bin>
		<!-- 
		<berkelium-binary-release>${project.basedir}/../berkelium-binary-release</berkelium-binary-release>
		 -->
	</properties>
	
	<build>
	<!-- 
		<sourceDirectory>${project.basedir}/../../src/main/java</sourceDirectory>
